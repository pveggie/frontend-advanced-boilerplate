<div class="banner" style="background-image: url(<%= image_path 'https://unsplash.it/1200/600?image=827' %>), linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.7) 50%);">
<!-- background-image: image-url('background.jpg'); -->
        <div class="banner-content">
          <h1>WELCOME HOME</h1>
          <p>Rent unique places to stay from local hosts in 190+ countries.</p>

          <form class="form-inline">
            <div class="form-group">
              <label class="sr-only">Check-in date</label>
              <input type="text" class="form-control input-lg" placeholder="checkin">
            </div>
            <div class="form-group">
              <label class="sr-only">Check-out date</label>
              <input type="email" class="form-control input-lg" placeholder="checkout">
            </div>
            <div class="form-group">
              <select class="form-control input-lg">
                <option value="1">1 person</option>
                <option value="2">2 persons</option>
                <option value="3">3 persons</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary btn-lg">Search</button>
          </form>
        </div>
      </div>

      <!-- Your features code -->
      <div class="features padded text-center">

        <div class="container">

          <div class="row">

            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "globe.png", alt: "globe" %>
              <h2>Discover the world</h2>
              <p>The earth is your new home.</p>
            </div>


            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "images/dollar.png", alt: "dollar" %>
              <h2>Pay online</h2>
              <p>No cash issues anymore.</p>
            </div>


            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "images/beer.png", alt: "beer" %>
              <h2>Meet people</h2>
              <p>Discover new culture and lifestyle.</p>
            </div>


            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "images/heart.png", alt: "heart" %>
              <h2>Share and love</h2>
              <p>Join a community you will love.</p>
            </div>


          </div>
        </div>

      </div>
      <!-- Your cards code -->
      <div class="wrapper-grey">
        <h2 class="text-center">Your next trip</h2>

        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-md-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path 'https://unsplash.it/500/250' %>);">
                <div class="card-category">Water Level</div>
                <div class="card-description">
                  <h2>Neptune's Lair</h2>
                  <p>Annoying stuff with switches</p>
                </div>
                <%= image_tag "neptune.jpg", class: "card-user avatar" %>
                <%= link_to "neptune", "team.html", class: "card-link" %>
              </div>
            </div>
            <div class="col-xs-12 col-md-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path 'https://unsplash.it/500/251' %>);">
              <div class="card-category">City Level</div>
                <div class="card-description">
                  <h2>Gemma's Lair</h2>
                  <p>Visit Scotland, get deep-fried</p>
                </div>
                <%= image_tag "gemma.jpg", class: "card-user avatar" %>
                <%= link_to "gemma", "team.html", class: "card-link" %>

<!-- => <a href="/press.html" class="btn btn-primary">Press</a> -->
              </div>
            </div>
            <div class="col-xs-12 col-md-4">
              <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path 'https://unsplash.it/500/252?image=884' %>);">
                <div class="card-category">Desert Level</div>
                <div class="card-description">
                  <h2>Basilisk's Lair</h2>
                  <p>Prepare to be petrified</p>
                </div>
                <%= image_tag "basilisk.jpg", class: "card-user avatar" %>
                <%= link_to "basilisk", "team.html", class: "card-link" %>
              </div>
            </div>
          </div>
        </div>


      </div>

